.register {
  position: fixed;
  width: 100%;
  height: 100%;
  background: linear-gradient(87deg, #182b4c 0, #1a1a4c 100%);
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding: 10px;
  box-sizing: border-box;
}

.box {
  width: calc(100% - 20px);
  /* height: 400px; */
  background-color: aliceblue;
  border-radius: 4px;
  padding: 20px;
}

.title {
  text-align: center;
  font-weight: bold;
  color: #1a1a4c;
  letter-spacing: 2px;
}

.input_style{
  margin-top: 20px;
  border: 1px solid #ccc;
  border-radius: 4px;
  background-color: #fff;
  padding: 5px 10px;
}

.checkCode_box {
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.checkCode_input {
  width: calc(100% - 37% - 30px);
  border: 1px solid #ccc;
  border-radius: 4px;
  background-color: #fff;
  padding: 5px 10px;
}

.user_verificationcode {
  background-color: #18227dcf;
  color: #fff;
  margin: 0;
  width: 37%;
  min-width: 120px;
  height: 40px;
  margin-top: 0;
  margin-left: 10px;
  line-height: 40px;
  text-align: center;
  font-size: 16px;
  letter-spacing: 1px;
}

.agreement_box{
  margin-top: 20px;
  display: flex;
}

.agreement{
  font-weight: bold;
  color: #182b4c;
  margin-left: 10px;
}

.nextBtn{
  margin-top: 20px;
  background-color: #18227dcf;
  color: #fff;
}

.tui-picker-content{
  margin-top: 20px;
  text-align: center;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.tui-picker-detail{
  height: 35px;
  line-height: 35px;
  background-color: #fff;
  /* font-size: px; */
  padding: 0 10px;
  overflow: hidden;
  border-radius: 10px;
}

.button_box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20px;
}

.goback,.create{
  background-color: #18227dcf;
  color: #fff;
}

.goback{
  width: 40%;
}

.create{
  width: 40%;
  
}