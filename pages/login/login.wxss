.login {
  position: fixed;
  width: 100%;
  height: 100%;
  background: linear-gradient(87deg, #182b4c 0, #1a1a4c 100%);
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding: 10px;
  box-sizing: border-box;
}

.box {
  width: calc(100% - 20px);
  /* height: 400px; */
  background-color: aliceblue;
  border-radius: 4px;
  padding: 20px;
}

.title {
  text-align: center;
  font-weight: bold;
  color: #1a1a4c;
  letter-spacing: 2px;
}

.input_style {
  margin-top: 20px;
  border: 1px solid #ccc;
  border-radius: 4px;
  background-color: #fff;
  padding: 5px 10px;
}

.checkCode_box {
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.checkCode_input {
  width: calc(100% - 37% - 30px);
  border: 1px solid #ccc;
  border-radius: 4px;
  background-color: #fff;
  padding: 5px 10px;
}

.user_verificationcode {
  background-color: #d1d1d1;
  color: #017497;
  margin: 0;
  width: 37%;
  min-width: 100px;
  height: 40px;
  margin-top: 0;
  margin-left: 10px;
  line-height: 46px;
  text-align: center;
  font-size: 16px;
  letter-spacing: 8px;
  font-weight: bold;
  display: inline-block;
  vertical-align: middle;
}

.login_button_box {
  margin-top: 30px;
  display: flex;
  justify-content: space-between;
}

.login_button {
  width: calc(100% - 37% - 10px);
  background-color: #303f94;
  color: #fff;
  margin: 0;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  letter-spacing: 2px;
}

.btninfo {
  margin: 0 0 0 5px;
  background-color: #777;
  color: #fff;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  letter-spacing: 2px;
  width: 37%;
  margin-left: 10px;
  min-width: 100px;
}

.resetPWD {
  margin-top: 20px;
  margin-bottom: 20px;
  font-size: 14px;
  color: #303f94;
}