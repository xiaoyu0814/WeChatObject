/* pages/beforeLive/beforeLive.wxss */
.beforeLive_bg {
  position: fixed;
  width: 100%;
  height: 100%;
  background-size: 100%;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.live_image {
  position: absolute;
  right: 40px;
  top: 50px;
  width: 120px;
  height: 80px;
}

.title {
  position: absolute;
  top: 150px;
  color: #fff;
  border-top: 1px solid #fff9;
  border-bottom:1px solid #fff9;
  /* height: 100px; */
  width: 300px;
  padding: 10px;
  font-size: 24px;
  text-align: center;
  letter-spacing: 5px;
  margin: 0 auto;
}

.teacher_image{
  position: absolute;
  top: 300px;
  height: 350px;
}

.message{
  width: 100%;
  box-sizing: border-box;
  background-color: rgb(13, 77, 150);
  padding: 10px 20px;
  position: absolute;
  top: 630px;
  font-size: 14px;
  letter-spacing: 2px;
}