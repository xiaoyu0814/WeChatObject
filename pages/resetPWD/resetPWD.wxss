.resetPWD {
  position: fixed;
  width: 100%;
  height: 100%;
  background: linear-gradient(87deg, #182b4c 0, #1a1a4c 100%);
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding: 10px;
  box-sizing: border-box;
}

.box {
  width: calc(100% - 20px);
  /* height: 400px; */
  background-color: aliceblue;
  border-radius: 4px;
  padding: 20px;
}

.title {
  text-align: center;
  font-weight: bold;
  color: #1a1a4c;
  letter-spacing: 2px;
  /* background-color: #18227dcf; */
}

.input_style{
  margin-top: 20px;
  border: 1px solid #ccc;
  border-radius: 4px;
  background-color: #fff;
  padding: 5px 10px;
}
.checkCode_box {
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.checkCode_input {
  width: calc(100% - 37% - 30px);
  border: 1px solid #ccc;
  border-radius: 4px;
  background-color: #fff;
  padding: 5px 10px;
}

.user_verificationcode {
  background-color: #18227dcf;
  color: #fff;
  margin: 0;
  width: 37%;
  min-width: 120px;
  height: 40px;
  margin-top: 0;
  margin-left: 10px;
  line-height: 40px;
  text-align: center;
  font-size: 16px;
  letter-spacing: 1px;
}

.btn_box{
  margin-top:20px;
  display: flex;
  justify-content: flex-start;
}

.backLogin{
  background-color: #888;
  color: #fff;
  width: 37%;
  height: 40px;
  line-height: 40px;
  margin: 0;
  min-width: 100px;
}

.reset{
  background-color: #18227dcf;
  color: #fff;
  width: calc(100% - 37% - 10px);
  margin: 0;
  margin-left: 10px;
  height: 40px;
  line-height: 40px;
}